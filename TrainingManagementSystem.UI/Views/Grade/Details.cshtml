@model GradeVM

@{
    ViewData["Title"] = "Grade Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <!-- كارت التفاصيل -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Grade Details</h3>
                </div>

                <div class="card-body p-4">
                    <dl class="row">
                        <!-- Session -->
                        <dt class="col-sm-4">Session</dt>
                        <dd class="col-sm-8">@Model.SessionName</dd>

                        <!-- Trainee -->
                        <dt class="col-sm-4">Trainee</dt>
                        <dd class="col-sm-8">@Model.TraineeName</dd>

                        <!-- Instructor -->
                        <dt class="col-sm-4">Graded By (Instructor)</dt>
                        <dd class="col-sm-8">@Model.InstructorName</dd>

                        <!-- Grade Value -->
                        <dt class="col-sm-4">Grade</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info text-dark fs-6">
                                @Model.Value
                            </span>
                        </dd>

                        <!-- Comments -->
                        <dt class="col-sm-4">Comments</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrWhiteSpace(Model.Comments))
                            {
                                @Model.Comments
                            }
                            else
                            {
                                <span class="text-muted">No comments provided</span>
                            }
                        </dd>

                        <!-- Created At -->
                        <dt class="col-sm-4">Created At</dt>
                        <dd class="col-sm-8">@Model.CreateAt.ToString("yyyy-MM-dd HH:mm")</dd>
                    </dl>
                </div>

                <!-- الأزرار في الفوتر -->
                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>


                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
