@model UserSearchViewModel

<h2>Manage Users</h2>

<!--Alert-->
<partial name="_alert" />
<!--Alert-->

<!-- Search Form -->
<form method="get" asp-action="Index">
    <div class="form-group">
        <label>Search by Name</label>
        <input type="text" name="SearchName" value="@Model.SearchName" class="form-control" placeholder="Enter name..." />
    </div>

    <div class="form-group">
        <label>Role</label>
        <select asp-for="SearchRole" class="form-control">
            <option value="">All</option>
            <option value="Admin">Admin</option>
            <option value="Instructor">Instructor</option>
            <option value="Trainee">Trainee</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Reset</a>

</form>

<hr />

<!-- Table -->
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    @if (user.Role == "Admin")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else if (user.Role == "Instructor")
                    {
                        <span class="badge bg-primary">Instructor</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Student</span>
                    }
                </td>
                <td>
                    @if (user.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactive</span>
                    }
                </td>
                <td>
                    <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-route-id="@user.Id"><i class="bi bi-pencil-square me-1"></i> Edit</a>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-outline-info btn-sm me-1"><i class="bi bi-eye"></i> Details</a>
                    <a class="btn btn-outline-danger btn-sm" onClick=DeleteItem("/User/Delete/@user.Id")>
                        <i class="bi bi-trash me-1"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!--Pagination-->

<nav>
    <ul class="pagination">
        @if (Model.TotalPages > 1)
        {
            <!-- First Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-SearchName="@Model.SearchName"
                   asp-route-SearchRole="@Model.SearchRole"
                   asp-route-pageNumber=1
                   aria-label="First">
                    «
                </a>
            </li>

            <!-- Previous Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-SearchName="@Model.SearchName"
                   asp-route-SearchRole="@Model.SearchRole"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   aria-label="Previous">
                    ‹
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-SearchName="@Model.SearchName"
                       asp-route-searchTerm="@Model.SearchRole">@i
                       </a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   asp-route-searchTerm="@Model.SearchName"
                   asp-route-searchTerm="@Model.SearchRole"
                   aria-label="Next">
                    ›
                </a>
            </li>

            <!-- Last Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@Model.TotalPages"
                   asp-route-searchTerm="@Model.SearchName"
                   asp-route-searchTerm="@Model.SearchRole"
                   aria-label="Last">
                    »
                </a>
            </li>

        }

    </ul>
</nav>


<div>
    <a class="btn btn-outline-primary" asp-controller="User" asp-action="Create">Add User</a>
</div>

@section Scripts {
    <script src="~/js/delete.js"></script>
}