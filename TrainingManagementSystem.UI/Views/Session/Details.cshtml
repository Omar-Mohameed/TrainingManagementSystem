@model SessionVM

@{
    ViewData["Title"] = "Session Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Session Details</h3>
                </div>

                <div class="card-body p-4">
                    <dl class="row">

                        <dt class="col-sm-4">Session Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Course</dt>
                        <dd class="col-sm-8">@Model.CourseName</dd>

                        <dt class="col-sm-4">Instructor</dt>
                        <dd class="col-sm-8">@Model.InstructorName</dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Mode</dt>
                        <dd class="col-sm-8">@Model.Mode</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                @Model.Location
                            }
                            else
                            {
                                <span class="text-muted">No location provided</span>
                            }
                        </dd>
                    </dl>
                </div>

                <div class="card-footer text-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>

                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
