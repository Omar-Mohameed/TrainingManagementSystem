@model SessionSearchViewModel

@{
    ViewBag.Title = "Sessions";
}

<h2>Sessions</h2>

<!--Alert-->
<partial name="_Alert" />
<!--Alert-->

<form method="get" asp-action="Index" class="form-inline mb-3">
    <input type="text" name="searchCourseName" value="@Model.SearchCourseName" class="form-control mr-2" placeholder="Search by Course Name, Title..." />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Reset</a>
</form>

<a asp-action="Create" class="btn btn-outline-success mb-3">Create New Session</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Course</th>
            <th>Instructor</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Mode</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Sessions.Any())
        {
            foreach (var session in Model.Sessions)
            {
                <tr>
                    <td>@session.Title</td>
                    <td>@session.CourseName</td>
                    <td>@session.InstructorName</td>
                    <td>@session.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@session.EndDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (session.Mode == "Online")
                        {
                            <span class="badge bg-info">Online</span>
                        }
                        else if (session.Mode == "Offline")
                        {
                            <span class="badge bg-secondary">Offline</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Hybrid</span>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(session.Location))
                        {
                            @session.Location
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@session.Id" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil-square me-1"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@session.Id" class="btn btn-outline-info btn-sm me-1">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <button class="btn btn-outline-danger btn-sm" onClick=DeleteItem("/Session/Delete/@session.Id")>
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center">No sessions found.</td>
            </tr>
        }
    </tbody>
</table>
<!--Pagination-->

<nav>
    <ul class="pagination">
        @if (Model.TotalPages >= 1)
        {
            <!-- First Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-SearchCourseName="@Model.SearchCourseName"
                   asp-route-pageNumber=1
                   aria-label="First">
                    «
                </a>
            </li>

            <!-- Previous Page -->
            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-SearchCourseName="@Model.SearchCourseName"
                   asp-route-pageNumber="@(Model.CurrentPage - 1)"
                   aria-label="Previous">
                    ‹
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-SearchCourseName="@Model.SearchCourseName">
                        @i
                    </a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(Model.CurrentPage + 1)"
                   asp-route-SearchCourseName="@Model.SearchCourseName"
                   aria-label="Next">
                    ›
                </a>
            </li>

            <!-- Last Page -->
            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@Model.TotalPages"
                   asp-route-SearchCourseName="@Model.SearchCourseName"
                   aria-label="Last">
                    »
                </a>
            </li>

        }

    </ul>
</nav>


@section Scripts {
    <script src="~/js/delete.js"></script>
}
