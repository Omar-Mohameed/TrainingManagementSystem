@model IEnumerable<CourseVM>

@{
    ViewBag.Title = "Courses";
}

<h2>Courses</h2>

<partial name="_Alert" />


<form method="get" class="form-inline mb-3">
    <!--Search Bar-->
    <input type="text" name="searchTerm" value="@ViewBag.searchTerm" class="form-control mr-2" placeholder="Search..." />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Reset</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Instructor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Category</td>
                <td>@course.InstructorName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <a  class="btn btn-sm btn-outline-danger" 
                        onClick=DeleteItem("/Course/Delete/@course.Id")>Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


<!--Pagination-->

<nav>
    <ul class="pagination">
        @if (ViewBag.TotalPages > 1)
        {
            <!-- First Page -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="1"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   aria-label="First">
                    «
                </a>
            </li>

            <!-- Previous Page -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   aria-label="Previous">
                    ‹
                </a>
            </li>

            <!-- Page Numbers -->
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-searchTerm="@ViewBag.SearchTerm">@i</a>
                </li>
            }

            <!-- Next Page -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   aria-label="Next">
                    ›
                </a>
            </li>

            <!-- Last Page -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@ViewBag.TotalPages"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   aria-label="Last">
                    »
                </a>
            </li>
            
        }
       
    </ul>
</nav>

<div>
    <a class="btn btn-outline-primary" asp-controller="Course" asp-action="Create">Add Course</a>
</div>


@section Scripts{
    <script src="~/js/Course.js"></script>
}